<layout version="0.1.0">

    <!--
    One page checkout success
    -->

    <checkout_onepage_success translate="label">
        <reference name="before_body_end">
            <block type="storebadge_ordertracking/checkout_onepage_success" name="checkout.success.storebadge" template="storebadge/ordertracking/success.phtml"/>
        </reference>
    </checkout_onepage_success>

    <!--
    Multi address shipping checkout success
    -->

    <checkout_multishipping_success translate="label">
        <reference name="before_body_end">
            <block type="storebadge_ordertracking/checkout_onepage_success" name="checkout.success.storebadge" template="storebadge/ordertracking/success.phtml"/>
        </reference>
    </checkout_multishipping_success>

</layout>
